<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourStoreActivity"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#7B4FCA"
        android:text="Ransalu Bathik Store"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/ransalau_header"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="                  Shop Address - 35/A,Kandy Road,Malabe"
        android:textColor="#9C27B0"
        android:textSize="@dimen/address"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="                           Contact Number - 0772341454"
        android:textColor="#9C27B0"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="146dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/a051370937092a92345c0de15f298026" />

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="146dp"
            android:layout_weight="0"
            android:background="#AA89CF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name - Yellow with red bathik saree"
                android:textSize="@dimen/product_name" />

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Price - Rs.6000/=" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="103dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/oip__2_" />

        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="101dp"
            android:layout_weight="0"
            android:background="#AA89CF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name - Yellow Sarong" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Price - Rs.3500/=" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="108dp"
            android:layout_height="125dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/oip__1_" />

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="117dp"
            android:layout_weight="0"
            android:background="#AA89CF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product3"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:text="Product Name - Blue with Black Bathik Shirt" />

            <TextView
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price - Rs.3500/=" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Size - S , M ,L , XL , XXL" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/filled_editstore"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#7030E3"
            android:gravity="center_horizontal"
            android:text="EDIT STORE"
            android:textColor="@color/white"
            android:textSize="@dimen/edit_btn1" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="center_horizontal"
            android:text="ADD ITEM"
            android:textColor="#7030E3" />

    </LinearLayout>

</LinearLayout>